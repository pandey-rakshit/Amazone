<%- include('../include/_header') %>

    <main>
        <div class="container mt-5 ">
            
            <% if (orders.length <= 0) { %>
                <h1>Nothing there!</h1>
            <% } else { %>

                <% orders.forEach(order => { %>
                    <div class="container border my-2">
                        <h3>Order &#8208; # <%= order._id %></h3>  <em>totalAmmount &#8208; Rs.<%= order.totalPrice %></em>
                    <% order.products.forEach(product => { %>
                    <div class="container ">
                        <div class="justify-content-center  text-center">
                            <div class="row my-3 border-bottom">
                                <div class="col themed-grid-col my-3"><img class="img rounded float-start mx-auto" width="80" height="80" src="<%= product.product.productImage %>" alt="productImage" class="card-img-top"></div>
                                <div class="col themed-grid-col my-3"><%= product.product.productTitle %></div>
                                <div class="col themed-grid-col my-3">Rs. <%= product.product.productPrice %></div>
                                <div class="col themed-grid-col my-3">Quantity <%= product.quantity %></div>
                            </div>                
                        </div>
                    </div>
                    <% }); %>
                    </div>
                <% }); %>
        </div>
        <% } %>

    </main>


<%- include('../include/_footer') %>
