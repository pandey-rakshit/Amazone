<%- include('../include/_header') %>

    <main>
        <div class="container mt-5 border-bottom">
            
        <% if (products.length > 0) { %>
            <% products.forEach(product => { %>
                <div class="container">
                    <div class="justify-content-center  text-center">
                        <div class="row my-3">                                   
                            <div class="col themed-grid-col "><img class="img rounded float-start mx-auto" width="80" height="80" src="<%= product.productId.productImage %>" alt="productImage" class="card-img-top"></div>
                            <div class="col themed-grid-col my-3"><%= product.productId.productTitle %></div>
                            <div class="col themed-grid-col my-3">Rs. <%= product.productId.productPrice %></div>
                            <div class="col themed-grid-col my-3">Quantity <%= product.quantity %></div>
                            <div class="col themed-grid-col my-3"><%- include('../include/add-to-cart', {product: product.productId}) %></div>
                            <div class="col themed-grid-col my-3">Net Price <br> Rs. <%= product.quantity * product.productId.productPrice %></div>

                            <div class="col themed-grid-col text-center my-3">
                                <form action="/cart-delete-item" method="POST">
                                    <input type="hidden" value="<%= product.productId._id %>" name="productId">
                                    <button class="btn btn-danger" type="submit">Delete</button>
                                </form>
                            </div>
                        </div>                
                    </div>
                </div>
        <% }) %>
        </div>

        <div class="container mt-5">
            <div class="centered">
                <form action="/create-order" method="POST">
                    <button type="submit" class="btn btn-lg  btn-outline-primary">Order Now!</button>
                </form>
            </div>
        </div>

        <% } else { %>
            <h1>Cart is Empty!</h1>
            <% } %>

    </main>


<%- include('../include/_footer') %>

                    